//= require jquery
//= require jquery_ujs
//= require_tree .

jQuery ->
  if $('#infinite-scrolling').size() > 0
    $(window).on 'scroll', ->
      more_beans_url = $('.pagination .next_page a').attr('href')
      if more_beans_url && $(window).scrollTop() > $(document).height() - $(window).height() - 60
            $.getScript more_beans_url
        return
      return
